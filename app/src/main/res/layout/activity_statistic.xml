<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="16dp"
    tools:context=".Statistic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_01"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/backImageButton"
            android:src="@drawable/ic_back"
            android:background="@drawable/background_01"/>

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thống kê chi tiết"
            android:background="@drawable/background_01"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Tổng thu nhập -->
    <TextView
        android:id="@+id/totalIncomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng Thu Nhập: 0 VNĐ"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textColor="#192B7C"/>

    <!-- Tổng chi tiêu -->
    <TextView
        android:id="@+id/totalExpenseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng Chi Tiêu: 0 VNĐ"
        android:textSize="16sp"
        android:textColor="#DB3427"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biểu Đồ Thu Nhập:"
        android:layout_marginTop="20dp"
        android:layout_gravity="start"
        android:textColor="#9C27B0"/>
    <!-- Biểu đồ thu nhập theo danh mục -->
    <LinearLayout
        android:id="@+id/incomeBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biểu Đồ Chi Tiêu:"
        android:layout_marginTop="20dp"
        android:layout_gravity="start"
        android:textColor="#9C27B0"/>
    <!-- Biểu đồ chi tiêu theo danh mục -->
    <LinearLayout
        android:id="@+id/expenseBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
</LinearLayout>
